<!-- Modal -->
<div class="modal fade" id="locModal" tabindex="-1" role="dialog" aria-labelledby="locModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="locModalLabel">Choose Location</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="w-form" action="/" method="POST">
                    <div class="form-group">
                        <label for="city">Location</label>
                        <input name="address" type="text" id="location" class="form-control">
                    </div>
                    {{!--
                    <button id="w-change-btn" type="submit" class="btn btn-primary">Save changes</button> --}}
